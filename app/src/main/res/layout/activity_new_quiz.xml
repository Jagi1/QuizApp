                app:layout_constraintTop_toBottomOf="@id/otherodp4"/>

            <EditText
                android:id="@+id/questionQuiz5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView26"/>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poprawna Odpowiedz:"
                app:layout_constraintTop_toBottomOf="@id/questionQuiz5"/>

            <EditText
                android:id="@+id/okodp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView27"/>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inna Odpowiedz:"
                app:layout_constraintTop_toBottomOf="@id/okodp5"/>

            <EditText
                android:id="@+id/otherodp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView28"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/otherodp5">

                <Button
                    android:id="@+id/clear_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Wyczysc"
                    app:layout_constraintEnd_toStartOf="@id/add_quiz"/>

                <Button
                    android:id="@+id/add_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dodaj Quiz"
                    app:layout_constraintStart_toEndOf="@id/clear_form"/>
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
