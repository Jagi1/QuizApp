<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pl.com.fireflies.quizapp.NewQuizActivity">

    <include
        android:id="@+id/user_bar"
        layout="@layout/user_bar">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namequiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwa Quizu:" />

            <EditText
                android:id="@+id/nameQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/namequiz"/>

            <TextView
                android:id="@+id/categoryquizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategoria Quizu:"
                app:layout_constraintTop_toBottomOf="@id/nameQuiz"/>

            <EditText
                android:id="@+id/categoryQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/categoryquizz"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pytanie 1"
                app:layout_constraintTop_toBottomOf="@id/categoryQuiz"/>

            <EditText
                android:id="@+id/questionQuiz1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView7"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/question1_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/questionQuiz1">

                <Button
                    android:id="@+id/choose_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_constraintEnd_toStartOf="@id/image1"
                    android:text="Wybierz Zdjecie" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@id/choose_image1"/>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poprawna Odpowiedz:"
                app:layout_constraintTop_toBottomOf="@id/question1_image"/>

            <EditText
                android:id="@+id/okodp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView8"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inna Odpowiedz:"
                app:layout_constraintTop_toBottomOf="@id/okodp1"/>

            <EditText
                android:id="@+id/otherodp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView10"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pytanie 2"
                app:layout_constraintTop_toBottomOf="@id/otherodp1"/>

            <EditText
                android:id="@+id/questionQuiz2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView13"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poprawna Odpowiedz:"
                app:layout_constraintTop_toBottomOf="@id/questionQuiz2"/>

            <EditText
                android:id="@+id/okodp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView14"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inna Odpowiedz:"
                app:layout_constraintTop_toBottomOf="@id/okodp2"/>

            <EditText
                android:id="@+id/otherodp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView15"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pytanie 3"
                app:layout_constraintTop_toBottomOf="@id/otherodp2"/>

            <EditText
                android:id="@+id/questionQuiz3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView18"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poprawna Odpowiedz:"
                app:layout_constraintTop_toBottomOf="@id/questionQuiz3"/>

            <EditText
                android:id="@+id/okodp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView19"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inna Odpowiedz:"
                app:layout_constraintTop_toBottomOf="@id/okodp3"/>

            <EditText
                android:id="@+id/otherodp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView20"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pytanie 4"
                app:layout_constraintTop_toBottomOf="@id/otherodp3"/>

            <EditText
                android:id="@+id/questionQuiz4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/textView22"/>

            <TextView
                android:id="@+id/textView23"
